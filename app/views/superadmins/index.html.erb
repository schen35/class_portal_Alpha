<div class="container">
  <div class="row col-md-4 col-md-offset-4" style="left: 0%; top: 70px;">
    <p id="notice"><%= notice %></p>

    <h1>Listing Users</h1>

    <table>
      <thead>
      <tr>
        <th>E-Mail</th>
        <th>Name</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
          <% @available_users = @users.find_by_sql('SELECT * FROM users WHERE role=0 OR role=1 OR role=2')%>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.role %></td>

            <td><%= link_to 'Delete', user , method: :delete %></td>

          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path %>

  </div>
</div>
